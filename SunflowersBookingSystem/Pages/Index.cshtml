@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using SunflowersBookingSystem.Web.Models
@model RegisterViewModel
@{  
    ViewData["Title"] = "Index";  
}

<div id="intro-example" class="p-5 text-center bg-image">
    <div class="mask" style="background-color: rgba(0, 0, 0, 0.7);">
        <div class="d-flex justify-content-center align-items-center h-100">
            <div class="text-white">
                <h1 class="mb-3">Weloce to "Sunflowers"</h1>
                <h5 class="mb-4">
                    Best place to relax
                </h5>
                <a class="btn btn-outline-light btn-lg m-2" href="#"
                   role="button" rel="nofollow" target="_blank">Login</a>
                <a class="btn btn-outline-light btn-lg m-2" href="#"
                   target="_blank" role="button">Book</a>
            </div>
        </div>
    </div>
</div>

<div id="loginForm">
    <form asp-controller="Users" asp-action="Authenticate" method="post">
        First Name:
        <input asp-for="FirstName" />
        Password:
        <input asp-for="Password" />
        <input type="submit" />
    </form>
</div>
